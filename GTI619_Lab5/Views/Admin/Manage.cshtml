@model GTI619_Lab5.Models.UpdateConfigModel
@{
    ViewBag.Title = "Manage";
}

<h2>Manage</h2>
<div class="row">
    @using (Html.BeginForm("UpdateConfig", "Admin", FormMethod.Post))
    {
        <div style="position:relative">
            <div style="float:left">
                <div>
                    @Html.LabelFor(m => m.NbrTry)
                </div>
                <div>
                    @Html.LabelFor(m => m.IsBlockAfterTwoTries)
                </div>
                <div>
                    @Html.LabelFor(m => m.TryDownPeriod)
                </div>
            </div>

            <div style="float:left">
                <div>
                    @Html.TextBoxFor(m => m.NbrTry)
                </div>
                <div>
                    @Html.CheckBoxFor(m => m.IsBlockAfterTwoTries)
                </div>
                <div>
                    @Html.TextBoxFor(m => m.TryDownPeriod)
                </div>
            </div>
        </div>
        <input type="submit" value="Soumettre" />

    }
</div>
