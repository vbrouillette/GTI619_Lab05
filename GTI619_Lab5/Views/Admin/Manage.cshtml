@model GTI619_Lab5.Models.UpdateConfigModel
@{
    ViewBag.Title = "Manage";
}

<h2>Manage</h2>
<p style="font-weight: bold; color: red;">@ViewBag.Error</p>
<div class="row">
    @using (Html.BeginForm("UpdateConfig", "Admin", FormMethod.Post))
    {
        <div style="position:relative">
            <div style="float:left">
                <div>
                    @Html.LabelFor(m => m.DelayBetweenBlocks)
                </div>
                <div>
                    @Html.LabelFor(m => m.DelayBetweenFailedAuthentication)
                </div>
                <div>
                    @Html.LabelFor(m => m.NbAttemptsBeforeBlocking)
                </div>
                <div>
                    @Html.LabelFor(m => m.MaxBlocksBeforeAdmin)
                </div>
                <div>
                    @Html.LabelFor(m => m.NbrLastPasswords)
                </div>
                <div>
                    @Html.LabelFor(m => m.IsPeriodic)
                </div>
                <div>
                    @Html.LabelFor(m => m.PeriodPeriodic)
                </div>
                <div>
                    @Html.LabelFor(m => m.MaxLenght)
                </div>
                <div>
                    @Html.LabelFor(m => m.MinLenght)
                </div>
                <div>
                    @Html.LabelFor(m => m.IsUpperCase)
                </div>
                <div>
                    @Html.LabelFor(m => m.IsLowerCase)
                </div>
                <div>
                    @Html.LabelFor(m => m.IsSpecialCase)
                </div>
                <div>
                    @Html.LabelFor(m => m.IsNumber)
                </div>
                <div>
                    @Html.LabelFor(m => m.TimeOutSession)
                </div>
                <div>
                    @Html.LabelFor(m => m.StrongAuthentication)
                </div>
                <div>
                    @Html.LabelFor(m => m.Password)
                </div>
                <input type="submit" value="Soumettre" />
            </div>

            <div style="float:left">
                <div>
                    @Html.TextBoxFor(m => m.DelayBetweenBlocks, new { @pattern = "(\\d,?)+" , @placeholder="5,10,15"})
                </div>
                <div>
                    @Html.TextBoxFor(m => m.DelayBetweenFailedAuthentication, new { @type = "number" })
                </div>
                <div>
                    @Html.TextBoxFor(m => m.NbAttemptsBeforeBlocking, new { @type = "number" })
                </div>
                <div>
                    @Html.TextBoxFor(m => m.MaxBlocksBeforeAdmin, new { @type = "number" })
                </div>
                <div>
                    @Html.TextBoxFor(m => m.NbrLastPasswords, new { @type = "number" })
                </div>
                <div>
                    @Html.CheckBoxFor(m => m.IsPeriodic)
                </div>
                <div>
                    @Html.TextBoxFor(m => m.PeriodPeriodic, new { @type = "number" })
                </div>
                <div>
                    @Html.TextBoxFor(m => m.MaxLenght, new { @type = "number" })
                </div>
                <div>
                    @Html.TextBoxFor(m => m.MinLenght, new { @type = "number" })
                </div>
                <div>
                    @Html.CheckBoxFor(m => m.IsUpperCase)
                </div>
                <div>
                    @Html.CheckBoxFor(m => m.IsLowerCase)
                </div>
                <div>
                    @Html.CheckBoxFor(m => m.IsSpecialCase)
                </div>
                <div>
                    @Html.CheckBoxFor(m => m.IsNumber)
                </div>
                <div>
                    @Html.TextBoxFor(m => m.TimeOutSession, new { @type = "number" })
                </div>
                <div>
                    @Html.CheckBoxFor(m => m.StrongAuthentication)
                </div>
                <div>
                    @Html.PasswordFor(m => m.Password)
                    @Html.ValidationMessageFor(model => model.Password, "test", new { @class = "text-danger" })
                </div>
            </div>
        </div>

    }
</div>
